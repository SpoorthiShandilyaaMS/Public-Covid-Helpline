<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNews"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="30dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="95dp"
        android:src="@drawable/pubimg" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bungee"
        android:text="ADD NEWS"
        android:textColor="#000"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp"
        app:counterEnabled="true"
        app:counterMaxLength="100"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addnewstitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title here..."
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        app:counterEnabled="true"
        app:counterMaxLength="600"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addnewsdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description here..."
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnchooseimage"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:elevation="0dp"
        android:fontFamily="sans-serif"
        android:text="Upload"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:backgroundTint="#F3715F"
        app:icon="@drawable/ic_baseline_image_search_24"
        app:iconSize="35dp" />


    <Button
        android:id="@+id/submitbtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="#FF000000"
        android:fontFamily="@font/aclonica"
        android:onClick="add_news"
        android:text="SUBMIT"
        android:textStyle="bold"
        android:textColor="#FFFDFD"
        android:textColorHighlight="#605D5D"
        android:textSize="17sp"
        app:backgroundTint="@color/purple_200"
        app:icon="@drawable/iconssubmit" />

</LinearLayout>