<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:padding="10dp"
    app:cardBackgroundColor="#f5e9e9"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imagecid"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/iconsprotectionmask" />

        <TextView
            android:id="@+id/titlecid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagecid"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:text="news news1 news1 news news1 news1"
            android:textColor="#910a0a"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/desccid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titlecid"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:text="this is news description this is news description this is news description this is news description this is news description this is news description this is news description"
            android:textColor="@color/black"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/sectorcid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desccid"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="Sector : "
            android:textColor="@color/black"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/postedbycid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sectorcid"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="Posted By : "
            android:textColor="@color/black"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/emailccid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postedbycid"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="Email : "
            android:textColor="@color/black"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/datetimecid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailccid"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="09-09-2021   11:34:06"
            android:textColor="@color/black"
            android:textSize="12dp" />
        <Button
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:background="@drawable/icons8_thumbs_up"
            android:id="@+id/vote_up_button"
            android:layout_below="@+id/datetimecid" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>
