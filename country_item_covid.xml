<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    android:elevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7dp"
        android:layout_marginHorizontal="12dp">
        <TextView
            android:id="@+id/sno"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="123"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/baloo"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/sno"
            android:id="@+id/countryflag"
            android:layout_toRightOf="@+id/sno" />

        <TextView
            android:id="@+id/countrynamecovid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/countryflag"
            android:text="India"
            android:textSize="20sp"
           android:paddingLeft="15dp"
            android:textColor="#9e8685"
            android:fontFamily="@font/baloo"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/countryflag" />

        <TextView
            android:id="@+id/covidcasescovid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/redd"
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:text="34445676"
            android:textSize="20sp"
            android:fontFamily="@font/baloo"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>