<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardElevation="5dp"
    android:padding="5dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/vacccenterid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:drawableLeft="@drawable/hospital"
            android:drawablePadding="12dp"
            android:padding="4dp"
            android:text="Vaccination Center"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/locvaccid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_below="@+id/vacccenterid"
            android:drawableLeft="@drawable/address"
            android:drawablePadding="12dp"
            android:padding="4dp"
            android:text="Location"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/timevaccid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_below="@+id/locvaccid"
            android:drawableLeft="@drawable/time"
            android:drawablePadding="12dp"
            android:padding="4dp"
            android:text="Vaccination Timings"
            android:textColor="#000000"/>
        <LinearLayout
            android:id="@+id/lin1id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timevaccid"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:id="@+id/vaccnameid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/vaccinee"
                android:padding="4dp"
                android:drawablePadding="12dp"
                android:text="Vaccine Name  "
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/vaccfeeid"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/rupee"
                android:padding="4dp"
                android:drawablePadding="12dp"
                android:text="Vaccine Charges  "
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin2id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin1id"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:id="@+id/vaccageid"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_baseline_person_add_24"
                android:padding="4dp"
                android:drawablePadding="12dp"
                android:text="Age  "
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/vaccavailibilityid"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/store"
                android:padding="4dp"
                android:drawablePadding="12dp"
                android:text="Availability  "
                android:textColor="#000000"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>